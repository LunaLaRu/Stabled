<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard - Stabled</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="p-8 bg-gray-50">

  <h1 class="text-3xl font-bold mb-4">Welcome to Your Dashboard</h1>
  <p id="welcomeMessage" class="mb-6">Loading user info...</p>

  <div id="features" class="space-y-3"></div>

  <button id="logoutBtn" class="mt-6 px-4 py-2 bg-red-600 text-white rounded">Logout</button>

  <script>
    // Load user from localStorage (assuming you saved it on signup/login)
    const user = JSON.parse(localStorage.getItem('stabledUser'));
    const welcomeMessage = document.getElementById('welcomeMessage');
    const features = document.getElementById('features');
    const logoutBtn = document.getElementById('logoutBtn');

    const tierData = {
      mustang: {
        name: 'Mustang Tier',
        features: ['Manage up to 10 horses', 'Basic client & staff management']
      },
      thoroughbred: {
        name: 'Thoroughbred Tier',
        features: ['Unlimited horses', 'Advanced client & staff management', 'Priority support']
      }
    };

    if (!user) {
      welcomeMessage.textContent = 'No user found. Please log in.';
      // Optionally redirect back to index.html after delay
      setTimeout(() => { window.location.href = 'index.html'; }, 3000);
    } else {
      welcomeMessage.textContent = `Hello, ${user.email}! You are on the ${tierData[user.plan].name} plan.`;
      tierData[user.plan].features.forEach(f => {
        const div = document.createElement('div');
        div.textContent = 'â€¢ ' + f;
        features.appendChild(div);
      });
    }

    logoutBtn.onclick = () => {
      localStorage.removeItem('stabledUser');
      window.location.href = 'index.html';
    };
  </script>

</body>
</html>
